- content_for :message do
  - if flash[:notice]
    %p#message{ :class => "success" }
      = flash[:notice]
  - if flash[:alert]
    %p#message{ :class => "fail" }
      = flash[:alert]
  - if flash[:error]
    %p#message{ :class => "fail" }
      = flash[:error]


- content_for :content do
  #picture
    %h2
      Rank
    - if @new_player 
      %div#me
        = simple_form_for @new_player, :url => rankings_path do |f|
          = f.input :nick_name, :label => "Your nickname"
          = f.submit :add
    
    %ol#rank
 
      - @ranking.each do |p|
        %li{ :class => p[:id] == session[:player_id] ? "me" : nil }
          %h3
            = p[:score]
          %div.player
            = p[:nick_name]


