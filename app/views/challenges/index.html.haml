- content_for :challenge do
  %ul#possible_answers
    - @quest.questions.each do |question|
      %li= button_to(question, :action => :move, :id => @quest.id, :answer => question)

- content_for :content do
  #picture
    = image_tag(@quest.image_url)

  = simple_form_for @new_quest, :url => move_challenge_path(@quest) do |f|
    %fieldset
      = f.input :image_url
      = f.input :page_where_image_is
      = f.input :questions
      = f.input :answer
      = f.button :submit

  - if @move
    - content_for :sidebar do
      #sidebar
        %h3 Score
        #score= @score
        %p#message= link_to "Send a photo and earn 500 points!", "#new_quest"
