!!!
%html
  %head
    %meta{ :charset => "utf-8" }/
    %title Photoquest
    %meta{ :name => "keywords", :content => "" }/
    %meta{ :name => "description", :content => "" }/
    = stylesheet_link_tag "reset", "photoquest", :media => "all", :cache => "all"
    %link{ :rel => "stylesheet", :href => "http://fonts.googleapis.com/css?family=Reenie+Beanie&subset=latin" }
    = javascript_include_tag "jquery.min.js", "rails.js", "application.js"
    = csrf_meta_tag
  %body
    #wrap
      #header
        %h1
          Photoquest - The challenge
        #logo
          = link_to image_tag("photoquest-logo.png", :alt => "Photoquest", :width => "268", :height => "73" ), "/"
      %hr
      #content
        = yield
      %hr
      #footer
        %p
          &copy; 2010 Photoquest
